<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTimer.MainPage"
             Title="Timer Pro"
             BackgroundColor="#1a1a1a">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Center">
            
            <!-- Titel -->
            <Label x:Name="WelcomeLabel"
                   Text="Timer Pro"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#00ff88" />

            <!-- Workout Vorlagen -->
            <Border BackgroundColor="#2d2d2d" 
                    StrokeThickness="0"
                    Stroke="Transparent"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="Workout-Vorlagen"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#00ff88"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />
                    
                    <Picker x:Name="WorkoutPicker"
                            Title="Workout wählen..."
                            BackgroundColor="#404040"
                            TextColor="White"
                            TitleColor="#888888"
                            SelectedIndexChanged="OnWorkoutSelected" />
                    
                    <Label x:Name="WorkoutDescriptionLabel"
                           Text=""
                           FontSize="12"
                           TextColor="#888888"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                </VerticalStackLayout>
            </Border>

            <!-- Timer Anzeige -->
            <Border BackgroundColor="#2d2d2d" 
                    StrokeThickness="0"
                    Stroke="Transparent"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label x:Name="TimerModeLabel"
                           Text="Training"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#00ff88"
                           Margin="0,0,0,10" />
                    
                    <Label x:Name="TimerDisplay"
                           Text="00:00"
                           FontSize="56"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#00ff88" />
                    
                    <Label x:Name="RoundCounterLabel"
                           Text=""
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="#888888"
                           Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

            <!-- Zeit eingeben -->
            <Border BackgroundColor="#2d2d2d" 
                    StrokeThickness="0"
                    Stroke="Transparent"
                    Padding="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Manuelle Eingabe"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#00ff88"
                           HorizontalOptions="Center" />
                    
                    <Grid ColumnDefinitions="Auto,*,Auto,*" 
                          HorizontalOptions="Center" 
                          ColumnSpacing="10">
                        <Label Grid.Column="0"
                               Text="Min:" 
                               VerticalOptions="Center" 
                               TextColor="White"
                               FontSize="16" />
                        <Entry Grid.Column="1"
                               x:Name="MinutesEntry" 
                               Text="5" 
                               Keyboard="Numeric" 
                               WidthRequest="80"
                               BackgroundColor="#404040"
                               TextColor="White"
                               PlaceholderColor="#888888" />
                        <Label Grid.Column="2"
                               Text="Sek:" 
                               VerticalOptions="Center" 
                               TextColor="White"
                               FontSize="16" />
                        <Entry Grid.Column="3"
                               x:Name="SecondsEntry" 
                               Text="0" 
                               Keyboard="Numeric" 
                               WidthRequest="80"
                               BackgroundColor="#404040"
                               TextColor="White"
                               PlaceholderColor="#888888" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Buttons -->
            <VerticalStackLayout Spacing="10">
                <Button x:Name="StartButton"
                        Text="Start"
                        FontSize="20"
                        BackgroundColor="#00ff88"
                        TextColor="Black"
                        HeightRequest="50"
                        CornerRadius="25"
                        Clicked="OnStartClicked" />

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Grid.Column="0"
                            x:Name="StopButton"
                            Text="Stop"
                            FontSize="18"
                            BackgroundColor="#ff4444"
                            TextColor="White"
                            HeightRequest="45"
                            CornerRadius="20"
                            Clicked="OnStopClicked" />

                    <Button Grid.Column="1"
                            x:Name="ResetButton"
                            Text="Reset"
                            FontSize="18"
                            BackgroundColor="#ff8800"
                            TextColor="White"
                            HeightRequest="45"
                            CornerRadius="20"
                            Clicked="OnResetClicked" />
                </Grid>
            </VerticalStackLayout>

            <!-- Timer Historie -->
            <Border BackgroundColor="#2d2d2d" 
                    StrokeThickness="0"
                    Stroke="Transparent"
                    Padding="15"
                    Margin="0,20,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="Timer Historie"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#00ff88"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />
                    
                    <CollectionView x:Name="HistoryCollectionView"
                                    HeightRequest="200"
                                    BackgroundColor="Transparent">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" 
                                      RowDefinitions="Auto,Auto"
                                      ColumnDefinitions="*,Auto">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding TimeText}"
                                           TextColor="White"
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding DateText}"
                                           TextColor="#888888"
                                           FontSize="12" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <Button x:Name="ClearHistoryButton"
                            Text="Historie löschen"
                            FontSize="14"
                            BackgroundColor="#666666"
                            TextColor="White"
                            HeightRequest="35"
                            CornerRadius="15"
                            Margin="0,10,0,0"
                            Clicked="OnClearHistoryClicked" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
