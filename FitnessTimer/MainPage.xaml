<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTimer.MainPage"
             Title="Fitness Timer">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <!-- Titel -->
            <Label x:Name="WelcomeLabel"
                   Text="Fitness Timer"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Timer Anzeige -->
            <Label x:Name="TimerDisplay"
                   Text="00:00"
                   FontSize="48"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Blue" />

            <!-- Zeit eingeben -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Minuten:" VerticalOptions="Center" />
                <Entry x:Name="MinutesEntry" 
                       Text="5" 
                       Keyboard="Numeric" 
                       WidthRequest="60" />
                <Label Text="Sekunden:" VerticalOptions="Center" />
                <Entry x:Name="SecondsEntry" 
                       Text="0" 
                       Keyboard="Numeric" 
                       WidthRequest="60" />
            </StackLayout>

            <!-- Buttons -->
            <Button x:Name="StartButton"
                    Text="Start"
                    FontSize="18"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="OnStartClicked" />

            <Button x:Name="StopButton"
                    Text="Stop"
                    FontSize="18"
                    BackgroundColor="Red"
                    TextColor="White"
                    Clicked="OnStopClicked" />

            <Button x:Name="ResetButton"
                    Text="Reset"
                    FontSize="18"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Clicked="OnResetClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
